@import 'fonts.styl'
*
  margin: 0
  padding: 0
  box-sizing: border-box
  outline: 0

body
  font-family: "Arial"
.container
  max-width: 1232px
  display: flex
  justify-content: space-between
  margin: 0 auto
header
  width: 100%
.menu
  background: #000000
  padding: 5px
  &__wrap
    display: flex
    align-items: center
  &__text
    color: #ffffff
    font-weight: 600
    font-size: 12px
  &__item
    padding: 0 10px
    display: flex
    align-items: center
    &_advt
      &:before
        content: ""
        background: url(../img/advt.png)
        width: 13px
        height: 14px
        display: inline-block
        margin-right: 4px
    &_reg
      &:before
        content: ""
        background: url(../img/reg.png)
        width: 18px
        height: 15px
        display: inline-block
        margin-right: 4px
    &_join
      &:before
        content: ""
        background: url(../img/join.png)
        width: 15px
        height: 15px
        display: inline-block
        margin-right: 4px
  &__link
    text-decoration: none
    color: #b9b9c3
    font-size: 12px
    &:hover
      color: #ffffff
    &_bor
      border-bottom: 1px dotted #b9b9c3
      &:hover
        border-color: #ffffff
.headermenu
  background: #3a3a43
  padding: 10px
  &__wrap
    display: flex
    align-items: center
  &__logo
    width: 180px
  &__item
    padding: 0 10px
    border-bottom: 3px solid transparent
    &:hover
      border-bottom: 3px solid #ffcc00
  &__link
    text-decoration: none
    color: #fff
    &:hover
      color: #ffcc00
    &_bor
      border-bottom: 1px dotted #ffffff
      &:hover
        border-color: #ffcc00
    &_col
      color: #ff7d42
      &:before
        content: ""
        background: url(../img/burn.png)
        width: 17px
        height: 23px
        display: inline-block
.content
  width: 100%
  &__main
    margin: 24px
    border: 2px solid rgba(0,0,0,0.1)
    width: 100%
  &__mainwrap
    max-width: 976px
    min-width: 740px
    padding: 15px
  &__secondary
    max-width: 250px
  &__linkback
    text-decoration: none
    font-size: 12px
    padding-right: 5px
    color: #0072be
    &:hover
      color:#9cf
  &__header
    font-size: 22px
    max-width: 612px
  &__secondarywrap
    display: flex
    justify-content: space-between
    margin: 20px 0 10px
  &__time
    font-weight: 600
    text-align: center
  &__clock
    background: #3a3a43
    color: #ffcc00
    padding: 10px 18px
    margin-top: 5px
  &__stockstime
    color: #ffffff
    background: #ff7d42
    padding: 5px 8px
    font-size: 10px
    display: inline
    font-weight: 600
    border-radius: 2px
    text-transform: uppercase
  &__thirdwrap
    display: flex
    align-items: center
    margin-top: 35px
  &__stockimg
    width: 324px
    height: 234px
  &__discription
    margin-left: 15px
    margin-top: -70px
    font-weight: 500
    font-size: 17px
  &__discriptiondetails
    display: flex
    align-items: center
    margin-top: 20px
  &__discriptiondetailsnum
    color: #ffffff
    background:#64c741
    margin-left: 30px
    padding: 10px
    font-weight: 600
    border-radius: 4px
  &__line
    margin: 34px 0
    border: 1px solid rgba(0,0,0,0.1)
  &__morestocksit
    font-size: 18px
